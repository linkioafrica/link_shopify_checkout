// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model MerchantConfig {
  id             String   @id @default(cuid())
  shop           String   @unique
  linkBusinessId String
  xrplAddress    String
  enabled        Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Payment {
  id                String    @id @default(cuid())
  shop              String
  orderId           String
  orderName         String
  linkPaymentId     String?   @unique
  linkPaymentUrl    String?
  amount            String
  currency          String
  status            String
  xrplTxHash        String?
  xrplConfirmations Int?
  paidAt            DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  // Large JSON/text fields - SQLite supports large TEXT automatically
  metadata String?

  @@index([shop, orderId])
  @@index([linkPaymentId])
  @@index([status])
}

model WebhookLog {
  id    String  @id @default(cuid())
  shop  String?
  event String

  // Large text fields, no @db.Text for SQLite
  payload String
  error   String?

  processed Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([shop, processed])
  @@index([createdAt])
}
